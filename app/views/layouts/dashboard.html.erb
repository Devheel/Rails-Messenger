<!DOCTYPE html>
<html>
  <head>
    <title>Messenger</title>
    <%= csrf_meta_tags %>
    <meta name="jwt-token" content=<%= @auth_token %>></meta>
    <script>
      window.__INITIAL_STATE__ = <%= redux_initial_state.to_json.html_safe %>;
    </script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <script src="https://use.fontawesome.com/cf3a3264a3.js"></script>
    <link rel="icon" type="image/png" sizes="96x96" href="<%= image_path('favicon-96x96.png') %>">
  </head>

  <body>
    <div id="app"></div>
    <%= yield %>
  </body>
</html>
